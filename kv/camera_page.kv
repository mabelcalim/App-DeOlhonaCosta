<Camera_page>:
    #id: camera_01
    canvas:
        Color:
            rgba: 0.531,0.5546,0.6172,1
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        orientation:'vertical'
        size: root.size
        Camera:
            id: camera
            allow_stretch: True
            resolution: (640,480) #(1280,960) #(1920,1080) #(1280,960)  #(640,480)  #self.resolution # (750,1334)
            keep_ratio: True
            play:True
            canvas.before:
                PushMatrix
                Rotate:
                    angle:270
                    origin:self.center
            canvas.after:
                PopMatrix
    BoxLayout:
        padding:15 #150
        spacing:20  #5
        #size: 1000,1000
        orientation: 'horizontal'

        ToggleButton:
            text: 'Play'
            size_hint_y: None
        #    #size_hint: .5, 1
            pos_hint: {"bottom": .5, "right": .5}
            height: '50dp'
            #on_press:camera.play = not camera.play
            #on_press:root.capture()
            #on_release:app.change_screen("camera_check")
        ToggleButton:
            text: 'Capturar'
            size_hint_y: None
            height: '50dp'
            on_press: root.capture()
            on_release:app.change_screen("camera_check")
        ToggleButton:
            text: "Retornar ao Transecto"
            size_hint_y: None
            #pos_hint: {"bottom": .5, "right": .5}
            #pos_hint: {"top": .05, "right": .8}
            #markup: True
            on_press: app.change_screen("trans")
            height: '50dp'
