<Camera_check>:
    #id: camera_01
    canvas:
        Color:
            rgba: 0.531,0.5546,0.6172,1
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        #padding:1 #150
        #spacing:1  #5
        size: self.size   #300,500 #100
        orientation: 'vertical'

        Image:
            id: imageView
            source:"figs/legec_logo2.png"
            pos_hint: {"top": 1, "right": 1}
        ToggleButton:
            text: 'Ver foto'
            size_hint_y: None
        #    #size_hint: .5, 1
        #    #pos_hint: {"top": .5, "right": .5}
        #    #background_color: (0, 0, 0, 1)
            height: '50dp'
            on_press:root.load_image()
        Label:
            text: "A foto está ok?"
            color: (0,1,0,1)
            font_size:50
            size_hint: .5, .1
            pos_hint: {"top": .17, "right": .8}

        GridLayout:
            rows: 1
            size_hint: 1, .05
            pos_hint: {"top": .2, "right": 1}
            LabelButton:
                text: "[u]Não[/u]"
                canvas.before:
                    Color:
                        rgba: 0.531,0.5546,0.6172,0.7
                    Rectangle:
                        size: self.size
                        pos: self.pos
                size_hint: .7, .1
                pos_hint: {"top": .05, "right": 0.4}
                markup: True
                on_press: app.change_screen("camera01")
    	        on_press: root.reset()

            LabelButton:
                text: "[u]Sim[/u]"
                canvas.before:
                    Color:
                        rgba: 0.531,0.5546,0.6172,0.7
                    Rectangle:
                        size: self.size
                        pos: self.pos
                size_hint: .7, .1
                pos_hint: {"top": .05, "right": 1.1}
                markup: True
                on_press: app.change_screen("trans")
	            on_press: root.reset()
        Label:
            id:msg_error
            color: (0,1,0,1)
            font_size:30
            size_hint: .5, .1
            pos_hint: {"top": .17, "right": .8}
